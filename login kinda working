def main():
    MainAnswer = None
    while MainAnswer not in ("1", "2", "3", "4", "5"):
        MainAnswer = input("1 for clocking employee in, 2 for clocking out employee, 3 see total, 4 to end program, 5 for master controls: ")
        if MainAnswer == "1":
            ChooseEmployeeClockIn()
        elif MainAnswer == "2":
            ChooseEmployeeClockOut()
        elif MainAnswer == "3":
            DisplayTotal()
        elif MainAnswer == "4":
            print("see ya")
        else:
            print("1 for clocking employee in, 2 for adding employee, 3 for whatever: ")
            
def DisplayTotal():
    answer = None
    while answer not in ("Employee1", "Employee2","Employee3","Employee4","Employee5","Employee6","Employee7","Employee8","Employee9","Employee10","Employee11","Employee12","Employee13","Employee14","Employee15","Employee16","Employee17","Employee18","Employee19","Employee20"):       
        answer = input("What Employee are you looking for?: ")
        if answer == "Employee1":
            Employee1Sum = TotalTimeLapsed(Employee1Start, Employee1End) * Employee1Wage
            sheet['B2'].value = TotalTimeLapsed(Employee1Start, Employee1End) + sheet['B3'].value
            sheet['C2'].value = Employee1Sum + sheet['C2'].value
            print("$",Employee1Sum)
            wb.save('Test.xlsx')
            main()
        elif answer == "Employee2":
